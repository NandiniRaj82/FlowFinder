{
  "manifest_version": 3,
  "name": "Web Auditor",
  "version": "1.0",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["axe.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
