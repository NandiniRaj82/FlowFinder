{
  "manifest_version": 3,
  "name": "Web Auditor",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["axe.min.js", "page-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
